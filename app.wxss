}

.pad20 {
  padding: 20rpx;
}

.padr30 {
  padding-right: 30rpx;
}

.padt30 {
  padding-top: 30rpx;
}

.pad30 {
  padding: 30rpx;
}

.mar20 {
  margin: 20rpx;
}

.mar30 {
  margin: 30rpx;
}

.marb30 {
  margin-bottom: 30rpx;
}

.marb50 {
  margin-bottom: 50rpx;
}

.marb80 {
  margin-bottom: 80rpx;
}

