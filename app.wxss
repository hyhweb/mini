.smallbtngroup button {
  font-size: 16px;
}

.prev-img {
  width: 150rpx;
  height: 150rpx;
}

.prev-img.small {
  width: 50rpx;
  height: 50rpx;
}

.prev-img.middle {
  width: 100rpx;
  height: 100rpx;
}

.nowrap {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.align-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.clearfixd:after {
  clear: both;
  display: block;
  visibility: hidden;
  height: 0;
  content: '.';
}

.list-item {
  background-color: #fff;
}

.borderb {
  border-bottom: 1px solid #e5e5e5;
}

.bordert {
  border-top: 1px solid #e5e5e5;
}

.border {
  border: 1px solid #e5e5e5;
}
.border-dashed{
      border: 1px dashed #ddd;
}
.minifont {
  font-size: 20rpx;
}

.smallfont {
  font-size: 30rpx;
}

.bigfont {
  font-size: 50rpx;
}

.c1 {
  color: #333;
}

.c2 {
  color: #cecece;
}

.c3 {
  color: #999;
}
.c4 {
  color: #666;
}
.face {
  width: 128rpx;
  height: 128rpx;
  border-radius: 100%;
}

.bg1 {
  background: #09f;
  background-color: #09f;
}

.weui-media-box__title {
  font-size: 17px;
}
.weui-media-box__hd_in-appmsg{
  width: 50px;
  height: 50px;
}
.weui-media-box__desc {
  font-size: 12px;
}
.weui-media-box__title{
  line-height: 2
}
.weui-media-box__info {
  padding-bottom: 0;
  margin-top: 5px;
  font-size: 13px;
}

.weui-media-box__info__meta {
  padding-right: 0.5em;
}

.fixed-b {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}

.box-shadow-b {
  box-shadow: 0px 1px 2px #ccc;
}

.small-badge {
  position: absolute;
  left: 0;
  top: 0;
  padding: 0rpx 15rpx;
  background-color: #09f;
  color: #fff;
}

.progressbox {
  padding: 10rpx 20rpx 10rpx 35rpx;
}

.wordbreak {
  word-break: break-all;
}

button {
  font-size: 16px;
  line-height: 2.4;
}

button[type=primary] {
  background-color: #09f;
}

button[type=primary]:hover {
  background-color: #09f;
}
